<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="54dp"
        android:layout_marginTop="52dp"
        android:text="   Escolha um número entre 0 e 10"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/IdButtonJogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="Jogar"
        android:text="JOGAR"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textoNumeroSelecionado"
        android:layout_width="220dp"
        android:layout_height="39dp"
        android:layout_marginTop="92dp"
        android:text="Nenhum número selecionado"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/IdButtonJogar"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/IdButtonJogar"
        app:layout_constraintTop_toBottomOf="@+id/IdButtonJogar" />
</androidx.constraintlayout.widget.ConstraintLayout>